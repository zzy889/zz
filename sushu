#include<iostream>
using namespace std;
 int main()
  {
      int m;
     bool flag=true;
      cout<<"Please enter a number:"<<endl;
      cin>>m;
      for (int i=2;i<m;i++)
     {
         if (m%i==0)
         {
            flag=false;
             break;
         }    
         }
     if (flag==true)
        cout<<m<<" is a prime number."<<endl;
     else
         cout<<m<<" is not a prime number."<<endl;
 }
